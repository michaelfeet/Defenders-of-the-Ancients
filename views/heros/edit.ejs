                    <select id="primaryAttribute" name="primaryAttribute" class="attribute" autocomplete="off"
                        value="<%= hero.primaryAttribute %>" required>
                        <option <%=hero.primaryAttribute=='Agility' ? "selected" : '' %> value="Agility">Agility
                        </option>
                        <option <%=hero.primaryAttribute=='Intelligence' ? "selected" : '' %>
                            value="Intelligence">Intelligence</option>
                        <option <%=hero.primaryAttribute=='Strength' ? "selected" : '' %> value="Strength">Strength
                        </option>
                    </select>
                </label><br><br>

                <label>Secondary Attribute: <br>
